<?xml version="1.0" encoding="utf-8"?>
<includes>
    <include name="SimpleList">
        <control type="group">
            <visible>Control.IsVisible(520)</visible>
            <include>Animation_VisibleChange400</include>
            <control type="image">
                <include>FullscreenDimensions</include>
                <texture>views/blackback_darker.png</texture>
                <include>Animation_WindowFade200</include>
                <visible>Skin.HasSetting(altoverlayinfowall)</visible>
            </control>
        </control>
        <control type="group">
            <visible>Control.IsVisible(520)</visible>
            <include>Animation_Widgets</include>
            <!-- Browser -->
            <control type="fixedlist" id="520">
                <viewtype label="31249">simplelist</viewtype>
                <posx>40</posx>
                <posy>50</posy>
                <width>950</width>
                <height>1012</height>
                <scrolltime>100</scrolltime>
                <orientation>vertical</orientation>
                <focusposition>6</focusposition>
                <onup>520</onup>
                <ondown>520</ondown>
                <onleft condition="Control.IsVisible(61)">61</onleft>
                <onleft>9000</onleft>
                <onright>9000</onright>
                <preloaditems>2</preloaditems>
                <pagecontrol>61</pagecontrol>
                <visible>Container.Content(movies) | Container.Content(tvshows)</visible>
                
                <itemlayout width="880" height="48">

                    <control type="label">
                        <posx>150</posx>
                        <posy>14</posy>
                        <width>600</width>
                        <font>Font_Reg22</font>
                        <textcolor>white2</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>

                    <control type="label">
                        <posx>130</posx>
                        <posy>14</posy>
                        <width>100</width>
                        <align>right</align>
                        <font>Font_Reg19</font>
                        <textcolor>grey</textcolor>
                        <label>$INFO[ListItem.Year]</label>
                    </control>

                    <control type="image">
                        <posx>28</posx>
                        <posy>-4</posy>
                        <width>40</width>
                        <height>40</height>
                        <texture>$VAR[WatchedIconVar]</texture>
                    </control>

                </itemlayout>
                <focusedlayout width="660" height="52">

                    <control type="label">
                        <posx>150</posx>
                        <posy>14</posy>
                        <width>600</width>
                        <font>Font_Bold30</font>
                        <scrollspeed>60</scrollspeed>
                        <scrollsuffix>  •  </scrollsuffix>
                        <textcolor>$VAR[TitleColorVar]</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>

                    <control type="label">
                        <posx>130</posx>
                        <posy>14</posy>
                        <width>100</width>
                        <align>right</align>
                        <font>Font_Reg21</font>
                        <textcolor>grey</textcolor>
                        <label>$INFO[ListItem.Year]</label>
                    </control>

                    <control type="image">
                        <posx>16</posx>
                        <posy>-6</posy>
                        <width>44</width>
                        <height>44</height>
                        <texture>$VAR[WatchedIconVar]</texture>
                    </control>

                </focusedlayout>
            </control>

            <control type="scrollbar" id="61">
                <posx>30</posx>
                <animation effect="fade" start="100" end="0" time="300" condition="!Control.HasFocus(61)">Conditional</animation>
                <posy>80</posy>
                <width>46</width>
                <height>900</height>
                <animation effect="zoom" start="70" end="100" center="auto" easing="out" tween="back" time="400" condition="Control.HasFocus(61)">Conditional</animation>
                <texturesliderbackground>views/scrollbarbacklist.png</texturesliderbackground>
                <orientation>vertical</orientation>
                <onleft>9000</onleft>
                <onright>520</onright>
            </control>

            <control type="group" id="521">
                <visible>!IsEmpty(ListItem.Icon) + Control.IsVisible(520)</visible>

                <control type="label">
                    <posx>830</posx>
                    <posy>100</posy>
                    <width>1100</width>
                    <height>30</height>
                    <font>Font_Reg38</font>
                    <label>$INFO[ListItem.Title]</label>
                </control>

                <control type="label">
                    <posx>835</posx>
                    <posy>145</posy>
                    <width>1100</width>
                    <height>30</height>
                    <font>Font_Reg14</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[ListItem.Tagline]</label>
                </control>

                <control type="image">
                    <posx>795</posx>
                    <posy>180</posy>
                    <width>320</width>
                    <height>422</height>
                    <fadetime>100</fadetime>
                    <aspectratio scalediffuse="false" align="right" aligny="center">keep</aspectratio>
                    <texture fallback="DefaultVideoCover.png">$INFO[ListItem.Icon]</texture>
                    <bordertexture border="5">views/thumbborderwhite.png</bordertexture>
                    <bordersize>6</bordersize>
                </control>

                <control type="image">
                    <posx>1104</posx>
                    <posy>180</posy>
                    <width>750</width>
                    <height>422</height>
                    <fadetime>100</fadetime>
                    <aspectratio align="left" aligny="top">scale</aspectratio>
                    <texture>$INFO[ListItem.Property(Fanart_Image)]</texture>
                    <bordertexture border="5">views/thumbborderwhite.png</bordertexture>
                    <bordersize>6</bordersize>
                </control>

                <control type="image">
                    <posx>1014</posx>
                    <posy>186</posy>
                    <width>90</width>
                    <height>90</height>
                    <include>OverlayVisibility0</include>
                </control>

                <control type="image">
                    <posx>850</posx>
                    <posy>610</posy>
                    <width>227</width>
                    <height>48</height>
                    <colordiffuse>white</colordiffuse>
                    <texture>$INFO[ListItem.Rating,stars/,.png]</texture>
                </control>

                <control type="label">
                    <posx>920</posx>
                    <posy>660</posy>
                    <width>100</width>
                    <height>30</height>
                    <font>Font_Reg25</font>
                    <textcolor>white</textcolor>
                    <align>center</align>
                    <label>$INFO[ListItem.Rating]</label>
                </control>

                <control type="label">
                    <posx>1110</posx>
                    <posy>605</posy>
                    <width>1100</width>
                    <height>30</height>
                    <font>Font_Reg14</font>
                    <textcolor>grey</textcolor>
                    <label>$INFO[ListItem.Duration,, minutes]$INFO[ListItem.Genre, • ]</label>
                </control>

                <control type="group" id="5211">
                    <visible>Container.Content(movies)</visible>

                    <control type="label">
                        <posx>815</posx>
                        <posy>710</posy>
                        <width>280</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>white6</textcolor>
                        <label>$LOCALIZE[20339]:</label>
                    </control>

                    <control type="label">
                        <posx>820</posx>
                        <posy>735</posy>
                        <width>280</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>grey</textcolor>
                        <scroll>true</scroll>
                        <scrollsuffix>  •  </scrollsuffix>
                        <label>$INFO[ListItem.Director]</label>
                    </control>

                    <control type="label">
                        <posx>815</posx>
                        <posy>780</posy>
                        <width>280</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>white6</textcolor>
                        <label>$LOCALIZE[20417]:</label>
                    </control>

                    <control type="label">
                        <posx>820</posx>
                        <posy>805</posy>
                        <width>280</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>grey</textcolor>
                        <scroll>true</scroll>
                        <scrollsuffix>  •  </scrollsuffix>
                        <label>$INFO[ListItem.Writer]</label>
                    </control>

                </control>

                <control type="group" id="5212">
                    <visible>Container.Content(tvshows)</visible>
                    
                    <control type="label">
                        <posx>1085</posx>
                        <posy>710</posy>
                        <width>300</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>$VAR[TitleColorVar]</textcolor>
                        <align>right</align>
                        <scroll>true</scroll>
                        <scrollsuffix>  •  </scrollsuffix>
                        <label>$INFO[ListItem.Property(NumEpisodes),[COLOR grey]Episodes: [/COLOR]]</label>
                    </control>

                    <control type="label">
                        <posx>1085</posx>
                        <posy>740</posy>
                        <width>300</width>
                        <height>30</height>
                        <font>Font_Reg14</font>
                        <textcolor>$VAR[TitleColorVar]</textcolor>
                        <align>right</align>
                        <scroll>true</scroll>
                        <scrollsuffix>  •  </scrollsuffix>
                        <label>$INFO[ListItem.Property(UnWatchedEpisodes),[COLOR grey]Unwatched: [/COLOR]]</label>
                    </control>

                </control>

                <control type="label">
                    <posx>1115</posx>
                    <posy>640</posy>
                    <width>750</width>
                    <height>200</height>
                    <font>Font_Reg14</font>
                    <aligny>top</aligny>
                    <textcolor>white6</textcolor>
                    <wrapmultiline>true</wrapmultiline>
                    <label>$INFO[ListItem.Plot]</label>
                </control>

            </control>

        </control>
    </include>
</includes>